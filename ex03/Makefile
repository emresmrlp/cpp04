CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98
SRC =	main.cpp \
		AMateria.cpp \
		Character.cpp \
		ICharacter.cpp \
		AMateria.cpp \
		MateriaSource.cpp \
		IMateriaSource.cpp \
		Ice.cpp \
		Cure.cpp
OBJ = $(SRC:.cpp=.o)
NAME = materia

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY = all clean fclean re